<% day_timeline.events.group_by { event_column(it) }.each do |column, events_grouped_by_column| %>
  <div class="events__column">
    <h2 class="events__column-header"><%= column %></h2>
    <% events_grouped_by_column.group_by { it.created_at.hour }.each do |hour, events| %>
      <%= event_cluster_tag(hour, column) do %>
        <%= render partial: "events/event", collection: events %>
        <%= local_datetime_tag events.first.created_at, class: "event__timestamp txt-small translucent" %>
      <% end %>
    <% end %>
  </div>
<% end %>
